<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Register</title>

    <!-- Same Bootstrap version as your login page -->
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
            rel="stylesheet"
    />

    <!-- Same Font Awesome version -->
    <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
            rel="stylesheet"
    />

    <!-- Inline styles: identical structure to the login page -->
    <style>
        body {
            background-color: #3366cc; /* Matches the blue background in your login */
            font-family: 'Arial', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .register-container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            width: 400px;
            text-align: center;
        }

        /* Icon styling (mirrors your .icon class in login) */
        .register-container .icon {
            font-size: 80px;
            color: #3366cc;
            margin-bottom: 20px;
        }

        /* Input styling: same as .form-control in login */
        .form-control {
            border-radius: 30px;
            height: 50px;
            padding: 0 20px;
        }

        /* Button styling: same as .btn-login, just renamed */
        .btn-register {
            background-color: #3366cc;
            color: white;
            border: none;
            border-radius: 30px;
            width: 100%;
            height: 50px;
            font-size: 16px;
            font-weight: bold;
            margin-top: 20px;
        }

        .btn-register:hover {
            background-color: #254b88;
        }

        /* Link styling: matches .forgot-password / text color, etc. */
        .login-link {
            margin-top: 10px;
            display: block; /* So it appears on its own line */
            color: #3366cc;
            text-decoration: none;
            font-size: 14px;
        }

        .login-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
<div class="register-container">
    <!-- Similar icon approach as login, but different icon (fa-user-plus) -->
    <div class="icon">
        <i class="fas fa-user-plus"></i>
    </div>


    <!-- Registration Form -->
    <form action="/auth/register" method="POST">
        <div class="mb-3">
            <input
                    type="text"
                    class="form-control"
                    id="username"
                    name="username"
                    placeholder="Username"
                    required
            />
        </div>

        <div class="mb-3">
            <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    placeholder="Email"
                    required
            />
        </div>
        <div class="mb-3">
            <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    placeholder="Password"
                    required
            />
        </div>

        <button type="submit" class="btn-register">Register</button>
    </form>

    <!-- Back to Login -->
    <a href="/auth/login" class="login-link">Already have an account? Login here</a>
</div>
</body>
</html>
