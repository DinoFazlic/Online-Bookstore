<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top Up Credits</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .card {
            max-width: 500px;
            margin: auto;
        }

        .notice {
            font-size: 0.85rem;
            color: #6c757d;
        }
    </style>
</head>
<body class="bg-light">

<!-- Header Section -->
<header class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid px-4">
        <a href="/users" class="btn btn-secondary">Back</a>
    </div>
</header>

<!-- Top Up Form -->
<div class="container py-5">
    <div class="card shadow">
        <div class="card-body">
            <h1 class="card-title text-center text-primary mb-4">Top Up Your Credits</h1>
            <form action="/users/topup" method="POST">
                <!-- Credit Card Number -->
                <div class="mb-3">
                    <label for="cardNumber" class="form-label">Credit Card Number</label>
                    <input
                            type="text"
                            id="cardNumber"
                            name="cardNumber"
                            class="form-control"
                            placeholder="1234 5678 9012 3456"
                            required>
                </div>

                <!-- Expiration Date -->
                <div class="mb-3">
                    <label class="form-label">Expiration Date</label>
                    <div class="d-flex gap-2">
                        <input
                                type="text"
                                id="expirationMonth"
                                name="expirationMonth"
                                class="form-control"
                                placeholder="MM"
                                maxlength="2"
                                required>
                        <input
                                type="text"
                                id="expirationYear"
                                name="expirationYear"
                                class="form-control"
                                placeholder="YY"
                                maxlength="2"
                                required>
                    </div>
                </div>

                <!-- CVV -->
                <div class="mb-3">
                    <label for="cvv" class="form-label">CVV</label>
                    <input
                            type="text"
                            id="cvv"
                            name="cvv"
                            class="form-control"
                            placeholder="Enter CVV"
                            maxlength="3"
                            required>
                </div>

                <!-- Top-Up Amount -->
                <div class="mb-3">
                    <label for="amount" class="form-label">Amount to Top Up</label>
                    <input
                            type="number"
                            id="amount"
                            name="amount"
                            class="form-control"
                            step="0.01"
                            placeholder="Enter amount"
                            required>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100">Confirm</button>
            </form>
            <p class="notice text-center mt-3">* This is a fake credit card form for demonstration purposes only.</p>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
